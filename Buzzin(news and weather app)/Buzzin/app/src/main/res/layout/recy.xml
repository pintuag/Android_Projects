<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:layout_margin="12dp"
    android:background="@color/colorw">

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:text=" 25 C"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.05"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tt"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tt" />

    <TextView
        android:id="@+id/dayd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ws"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ws" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="96dp"
        android:layout_height="91dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a12" />

    <TextView
        android:id="@+id/humid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20%"
        app:layout_constraintBottom_toBottomOf="@+id/i1"
        android:layout_marginBottom="2dp"
        app:layout_constraintRight_toLeftOf="@+id/i1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/ttimed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/dayd"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dayd" />

    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Delhi"
        app:layout_constraintTop_toTopOf="@+id/tt"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toRightOf="@+id/tt"
        android:layout_marginLeft="115dp" />
</android.support.constraint.ConstraintLayout >