<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.buzzin.MainActivity"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:background="@color/colorPrimary"
        android:text="Source"
        android:textColor="@color/color1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="12dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="194dp"
        android:layout_height="269dp"
        android:padding="10dp"
        android:layout_marginStart="23dp"
        android:background="@color/color1"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="126dp"
        android:layout_height="126dp"

        app:layout_constraintTop_toTopOf="@+id/t2"
        app:layout_constraintRight_toRightOf="@+id/b2" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/b2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/b2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/td"
        android:layout_width="195dp"
        android:layout_height="wrap_content"

        android:layout_marginRight="8dp"
        android:background="@color/color1"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/b1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/ttp"
        app:layout_constraintRight_toRightOf="@+id/t2"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/ttp"
        android:layout_width="117dp"
        android:layout_height="20dp"


        android:text="Published at:"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/t2"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/td" />

    <TextView
        android:id="@+id/tta"
        android:layout_width="117dp"
        android:layout_height="20dp"


        android:text="Author"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/t2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tda" />
    <TextView
        android:id="@+id/tda"
        android:layout_width="195dp"
        android:layout_height="wrap_content"

        android:layout_marginRight="8dp"
        android:background="@color/color1"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@+id/t2"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/ttp"
        app:layout_constraintLeft_toLeftOf="@+id/tta"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
