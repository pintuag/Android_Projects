<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/touch_selec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t1"
        android:layout_width="202dp"
        android:layout_height="97dp"
        android:padding="8dp"
        android:textSize="17sp"

        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/t0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/t0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/t0" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t0"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="104dp"
        android:layout_height="93dp"
        android:layout_marginRight="105dp"
        app:layout_constraintRight_toRightOf="parent"

        app:srcCompat="@drawable/asdf"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/t0"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:textColor="@color/colord"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="79dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>